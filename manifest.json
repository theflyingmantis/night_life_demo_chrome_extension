{
  "manifest_version": 2,
  "name": "night_life",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery.js",
        "colours.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "night_life.jpg"
  }
}